from telegram import Update
from telegram.ext import Updater, CommandHandler, CallbackContext

# Dictionary to store user scores
scores = {}

# Start command
def start(update: Update, context: CallbackContext) -> None:
    user = update.effective_user
    scores[user.id] = 0
    update.message.reply_text(f"Welcome {user.first_name}! Type /click to start clicking and earn points!")

# Click command
def click(update: Update, context: CallbackContext) -> None:
    user = update.effective_user
    scores[user.id] += 1
    update.message.reply_text(f"{user.first_name}, you clicked! Your score is now {scores[user.id]}.")

# Score command
def score(update: Update, context: CallbackContext) -> None:
    user = update.effective_user
    update.message.reply_text(f"Your current score is {scores[user.id]}.")

# Main function
def main():
    updater = Updater("YOUR-API-TOKEN")
    
    dispatcher = updater.dispatcher

    dispatcher.add_handler(CommandHandler("start", start))
    dispatcher.add_handler(CommandHandler("click", click))
    dispatcher.add_handler(CommandHandler("score", score))

    updater.start_polling()
    updater.idle()

if __name__ == '__main__':
    main()
